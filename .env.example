# ===== LLM API Keys (at least one required) =====
# Groq (Primary - Fast & Cheap)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Anthropic Claude (High Quality)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# OpenAI (Powerful)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini (Long Context)
GOOGLE_API_KEY=your_google_api_key_here

# ===== LLM Configuration =====
DEFAULT_LLM=groq
FALLBACK_LLM=anthropic
EMERGENCY_LLM=openai
LLM_TEMPERATURE=0.7
LLM_MAX_RETRIES=3

# ===== ChromaDB Configuration =====
CHROMA_HOST=chromadb
CHROMA_PORT=8000
COLLECTION_NAME=documents

# ===== File Processing Configuration =====
WATCH_FOLDER=/data/input
MARKDOWN_FOLDER=/data/output
OBSIDIAN_VAULT_PATH=/data/obsidian
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=50
ENABLE_FILE_WATCH=true

# ===== OCR Configuration =====
USE_OCR=true
OCR_PROVIDER=tesseract
OCR_LANGUAGES=eng,deu,fra,spa

# ===== Obsidian Configuration =====
CREATE_OBSIDIAN_LINKS=true
HIERARCHY_DEPTH=3

# ===== Platform Configuration =====
PLATFORM=linux
IS_DOCKER=true
SUPPORTED_LANGUAGES=en,de,fr,es

# ===== Optional: Cloud OCR (if not using Tesseract) =====
# GOOGLE_CLOUD_PROJECT_ID=your_project_id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AZURE_COGNITIVE_SERVICES_KEY=your_azure_key
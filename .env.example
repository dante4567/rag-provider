
# Security Configuration
RAG_API_KEY=your_secure_api_key_here
REQUIRE_AUTH=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# LLM API Keys - Replace with your actual API keys
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ChromaDB settings
CHROMA_HOST=localhost
CHROMA_PORT=8000
COLLECTION_NAME=documents

# File processing settings
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# File monitoring
ENABLE_FILE_WATCH=true
WATCH_FOLDER=/data/input

# OCR settings
USE_OCR=true
OCR_PROVIDER=tesseract
OCR_LANGUAGES=eng,deu

# Obsidian settings
OBSIDIAN_VAULT_PATH=/data/obsidian
CREATE_OBSIDIAN_LINKS=true
HIERARCHY_DEPTH=3

# LLM provider priority
DEFAULT_LLM=groq
FALLBACK_LLM=anthropic
EMERGENCY_LLM=openai

# Cost tracking
ENABLE_COST_TRACKING=true
DAILY_BUDGET_USD=10.0
